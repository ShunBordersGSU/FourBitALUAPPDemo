<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shunborders.fourbitaluapp.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="122dp"
                android:layout_height="278dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a0"
                    android:id="@+id/a0" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a1"
                    android:id="@+id/a1" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a2"
                    android:id="@+id/a2" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a3"
                    android:id="@+id/a3" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="125dp"
                android:layout_height="273dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b0"
                    android:id="@+id/b0" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b1"
                    android:id="@+id/b1" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b2"
                    android:id="@+id/b2" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b3"
                    android:id="@+id/b3" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="263dp">

                <TextView
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:text="S0="
                    android:id="@+id/s0" />

                <TextView
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:text="S1= "
                    android:id="@+id/s1" />

                <TextView
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:text="S2= "
                    android:id="@+id/s2" />

                <TextView
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:text="S3= "
                    android:id="@+id/s3" />

                <TextView
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:text="c= "
                    android:id="@+id/c" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="142dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:text="+"
                    android:id="@+id/add" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="121dp"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/sub" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="122dp"
                android:layout_height="match_parent">

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="clear"
                    android:id="@+id/clear" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
